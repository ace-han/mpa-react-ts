  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "env": {},
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8090"
      ],
      "subProcess": true,
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django shell",
      "type": "python",
      "request": "launch",
      "env": {},
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "shell"
      ],
      "subProcess": true,
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django shell github",
      "type": "python",
      "request": "launch",
      "env": {
        "ENV_PATH": ".env.github",
        "__comment__": "because the debugging django invoke twice internally, it won't work plz stick to .env instead"
      },
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "shell"
      ],
      "subProcess": true,
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django migrate",
      "type": "python",
      "request": "launch",
      "env": {},
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "migrate"
      ],
      "subProcess": true,
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "python",
      "request": "test",
      "env": {},
      "justMyCode": false,
    },
  ]
}